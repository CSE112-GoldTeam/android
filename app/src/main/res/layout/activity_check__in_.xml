<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cse112goldteam.robobetty.Check_In_Activity">

    <TextView android:text="Welcome to &lt;Company>!" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_marginTop="65dp"
        android:autoText="false"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check In"
        android:textAllCaps="false"
        android:id="@+id/checkInButton"
        android:layout_marginBottom="85dp"
        android:textSize="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#ff46ff86"
        android:gravity="center_vertical"
        android:textColor="#ffffffff"
        android:clickable="false" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/imgPlaceholder"
        android:layout_above="@+id/checkInButton"
        android:layout_alignLeft="@+id/checkInButton"
        android:layout_alignStart="@+id/checkInButton"
        android:layout_alignRight="@+id/checkInButton"
        android:layout_alignEnd="@+id/checkInButton"
        android:layout_below="@+id/" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="No Appointment?"
        android:id="@+id/noApptButton"
        android:layout_marginBottom="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
